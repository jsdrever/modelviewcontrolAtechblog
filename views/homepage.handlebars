<!-- Loop over each object in the projects array -->
{{#each post as |post| }}
<div class="row mb-4 post">
  <div style= 'background-color: rgb(234, 222, 222);' class="col-md-8">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    </div>
<div style= 'background-color: rgb(231, 165, 165);' class="col-md-4">


    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  </div>
  <div style= 'background-color: rgb(125, 185, 230);' class="row mb-4 post">

  
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
